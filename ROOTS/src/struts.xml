<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
    
<struts>
	<package name="default" extends="struts-default">
		
		<!-- GLOBAL RESULTS -->
		<global-results>
			<result name="login">/Login-User.jsp</result>
		</global-results>
		
		<!-- REGISTER ACTION -->
		<action name="register" class="roots.register.action.RegisterAction">
			<result name="success">/Login-User.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		
		<!-- ADMIN LOGIN ACTION -->
		<action name="adminlogin" class="roots.admin.action.AdminLoginAction">
			<result name="success">/Admin-Logged_In.jsp</result>
			<result name="fail">/Login-Admin.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		
		<!-- ADMIN LOGOUT ACTION -->
		<action name="adminlogout" class="roots.admin.action.AdminLogoutAction">
			<result name="success">/Login-Admin.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		
		<!--  LOGIN ACTION -->
		<action name="login" class="roots.login.action.LoginAction">
			<result name="success">/Home-Logged_In.jsp</result>
			<result name="fail">/Login-User.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		
		<!--  LOGOUT ACTION -->
		<action name="logout" class="roots.login.action.LogoutAction">
			<result name="success">/Login-User.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		
	</package>
</struts>